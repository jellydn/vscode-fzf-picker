{
	"permissions": {
		"allow": [
			"Bash(backlog task create:*)",
			"Bash(git checkout:*)",
			"Bash(backlog task edit:*)",
			"Bash(grep:*)",
			"Bash(npm run build:*)",
			"Bash(npm run lint)",
			"Bash(npm run typecheck:*)",
			"Bash(cat:*)",
			"Bash(ls:*)",
			"Bash(echo:*)",
			"Bash(git add:*)",
			"Bash(git commit:*)",
			"Bash(git push:*)",
			"Bash(git pull:*)",
			"Bash(backlog task list:*)",
			"WebFetch(domain:github.com)",
			"Bash(backlog task:*)",
			"WebFetch(domain:docs.anthropic.com)",
			"Bash(gh pr list:*)",
			"Bash(gh pr edit:*)"
		],
		"deny": []
	},
	"hooks": {
		"PostToolUse": [
			{
				"matcher": "Bash(git commit:*)",
				"hooks": [
					{
						"type": "command",
						"command": "if [ $? -eq 0 ]; then echo '‚úÖ Commit completed with pre-commit hooks'; else echo '‚ö†Ô∏è Pre-commit hooks modified files, adding and retrying commit...'; git add .; git commit --amend --no-edit; fi"
					}
				]
			},
			{
				"matcher": "Edit(*)",
				"hooks": [
					{
						"type": "command",
						"command": "echo 'üìù File modified - pre-commit will format on commit'"
					}
				]
			}
		],
		"PreToolUse": [
			{
				"matcher": "Bash(git commit:*)",
				"hooks": [
					{
						"type": "command",
						"command": "echo 'üîç Running pre-commit hooks (biome, oxlint)...'"
					}
				]
			}
		]
	}
}
